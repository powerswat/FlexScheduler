<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cse.osu.edu.flexscheduler.DetailListFragment"
    android:id="@+id/detail_list">

    <ScrollView
        android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <Button
                android:id="@+id/direction_button"
                android:text="Direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/postpone_button"
                    android:text="Postpone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/cancel_button"
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true" />
                <Button
                    android:id="@+id/done_button"
                    android:text="Done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/Add_button"
                    android:text="Add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:text="Title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.72"
                    android:id="@+id/title" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:text="Start"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.72"
                    android:text="Aug 20, 2012"
                    android:onClick="mOnClick"
                    style="@android:style/Widget.Holo.Light.Spinner" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.72"
                    android:text="11:00 AM"
                    android:onClick="mOnClick"
                    style="@android:style/Widget.Holo.Light.Spinner" />
                   <!-- android:layout_width="0dp"-->

                <!-- <EditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:inputType="date"
                     android:id="@+id/start_date" />

                 <EditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:inputType="time"
                     android:id="@+id/start_time" /> -->
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:text="Duration"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <!--<Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/duration_hours"
                    android:layout_weight="0.72" />-->
                <!-- <TextView
                    android:id="@+id/duration_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.72"
                    android:text="2"
                    android:onClick="durationHoursNow"
                    style="@android:style/Widget.Holo.Light.Spinner" />
                   -->

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:layout_weight="0.72"
                    android:id="@+id/duration_hours"/>

                <TextView
                    android:text="Hours"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <!--<Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/duration_minutes"
                    android:layout_weight="0.72" />-->
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:layout_weight="0.72"
                    android:id="@+id/duration_minutes"/>

                <TextView
                    android:text="Minutes"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:text="Deadline"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/deadline_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.72"
                    android:text="Aug 20, 2012"
                    android:onClick="mOnClick"
                    style="@android:style/Widget.Holo.Light.Spinner" />

                <TextView
                    android:id="@+id/deadline_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.72"
                    android:text="11:00 AM"
                    android:onClick="mOnClick"
                    style="@android:style/Widget.Holo.Light.Spinner" />
            </LinearLayout>

            <!-- <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/test_place" />
-->
            <TextView
                android:text="Place"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/test_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                android:onClick="mOnClick"
                style="@android:style/Widget.Holo.Light.Spinner" />

            <!--<EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/place"
                android:layout_gravity="center_horizontal"/>
            -->


            <TextView
                android:text="Participant"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="left"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/participant"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:text="Note"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="left"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/note"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <Button
                    android:id="@+id/direction_button"
                    android:text="Direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/postpone_button"
                    android:text="Postpone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/cancel_button"
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true" />
                <Button
                    android:id="@+id/done_button"
                    android:text="Done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/Add_button"
                    android:text="Add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
